<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h2>Modifier vos informations de compte</h2>
  </div>
<div class="panel-body">
    <div class="form-group">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.input :password, autocomplete: "off", hint: "Laisser les champs de mot de passe vide si vous ne souhaiter pas le modifier", required: false, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation, required: false, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :current_password, hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications", required: true, input_html: { class: 'form-control' } %>
    </div>

    <div class="pull-left">
      <%= f.button :submit, "Mettre à jour mon profil", :class => "btn btn-success" %>
    </div>
  <% end %>

    <div class="pull-right">
      <%= link_to "Supprimer mon compte", registration_path(resource_name),
                  data: { confirm: "Votre profil sera supprimé. Confirmer ?" },
                  method: :delete, :class => "btn btn-danger" %>
    </div>
  </div>
</div>